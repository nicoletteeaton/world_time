.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      %h1{class: 'text-center login-title'} Sign in to continue to World Time
      .account-wall
        %img{class: "profile-img", style: "width:125px;height:110px", src: "https://c.tadst.com/gfx/300h/worldclock.png?1", alt: ""}
          =form_tag '/login' , class: 'form-signin' do
            =text_field_tag :email, nil, placeholder: 'Email', class: 'form-control'
            %br
            =password_field_tag :password, nil, placeholder: 'password', class: 'form-control'
            %br
            =submit_tag 'Sign In', class: 'btn btn-lg btn-primary btn-block'
      %div{class:'text-center new-account'}
        %a{href: '/signup'} Create an Account