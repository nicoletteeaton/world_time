.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      %h1{class: 'text-center login-title'} Signup to continue to World Time
      .account-wall
        %img{class: "profile-img", style: "width:125px;height:110px", src: "https://c.tadst.com/gfx/300h/worldclock.png?1", alt: ""}
          =form_for :user, url: '/users' , class: 'form-signin' do |f|
            =f.text_field :name, placeholder: 'Name', class: 'form-control', required: true
            %br
            =f.text_field :email, placeholder: 'Email', class: 'form-control', required: true
            %br
            =f.password_field :password,  placeholder: 'password', class: 'form-control', required: true
            %br
            =f.password_field :password_confirmation,  placeholder: 'password confirmaion', class: 'form-control', required: true
            %br
            =f.submit 'Create Account', class: 'btn btn-lg btn-primary btn-block'
      %div{class:'text-center new-account'}
        %a{href: '/login'} Login